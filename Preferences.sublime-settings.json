{
  "always_show_minimap_viewport": true,
  "bold_folder_labels": true,
  "caret_style": "solid",
  "color_scheme": "Packages/Babel/Monokai Phoenix.tmTheme",
  "draw_white_space": "all",
  "enable_tab_scrolling": false,
  "font_options":
  [
    "gray_antialias",
    "subpixel_antialias"
  ],
  "font_size": 14,
  "color_scheme": "Packages/GitHub Theme/schemes/GitHub Dark.sublime-color-scheme",
  "theme": "GitHub-Theme.sublime-theme",
  "highlight_line": true,
  "hot_exit": false,
  "ignored_packages":
  [
    "JavaScript"
  ],
  "indent_guide_options":
  [
    "draw_normal",
    "draw_active"
  ],
  "index_files": false,
  "margin": 0,
  "overlay_scroll_bars": "enabled",
  "scroll_speed": 0,
  "show_encoding": true,
  "show_line_endings": true,
  "show_sidebar_disclosure": false,
  "tab_size": 4,
  "translate_tabs_to_spaces": true,
  "word_wrap": true
}


// Key bindings
[
    { "keys": ["shift+right"], "command": "next_view" },
    { "keys": ["shift+left"], "command": "prev_view" }
]


{
  "snippets":{
    "html": {
      "snippets": {
        "cl": "console.log(${1})",
        "ce": "console.error(${1})",
        "ci": "console.info(${1})",
        "f" : "function${1}(${2}) {}${3}",
        "ph140":"<img src='http://placehold.it/140x100'/>",
        "ph200":"<img src='http://placehold.it/200x100'/>",
        "lpimg":"<img src=\"http://lorempixel.com/400/200\">",
        "lpgimg":"<img src=\"http://lorempixel.com/g/400/200\">"
      },
      "tags": {
        "link": "<link ref='stylesheet' href='${1}'>"
      }
    }
  }
}

